@model Library.MVC.Models.BookAddCopiesVm;

@{
    ViewData["Title"] = "Exemplar";
}

<h4>Lägg till fler upplagor av en existerande bok</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Kopior</label>
                <input asp-for="AmountOfCopies" class="form-control" />
                <span asp-validation-for="AmountOfCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookList" class="control-label"></label>
                @Html.DropDownListFor(m => m.BookId, Model.BookList, "Välj bok")
                <div>
                    <a asp-controller="Books" asp-action="Create">Lägg till ny bok</a>
                </div>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-action="Admin">Tillbaka</a>
                <input type="submit" value="Lägg till" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

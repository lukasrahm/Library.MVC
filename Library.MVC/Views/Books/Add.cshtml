@model Library.MVC.Models.BookAddCopiesVm;

@{
    ViewData["Title"] = "Add";
}

<h4>Lägg till fler upplagor av en existerande bok</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AmountOfCopies" class="control-label"></label>
                <input asp-for="AmountOfCopies" class="form-control" />
                <span asp-validation-for="AmountOfCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookList" class="control-label"></label>
                @Html.DropDownListFor(m => m.BookId, Model.BookList, "Välj bok")
                <div>
                    <a asp-controller="BookEdit" asp-action="Create">Lägg till ny bok</a>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-danger" asp-action="Index">Gå tillbaka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

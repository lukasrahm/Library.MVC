@model Library.MVC.Models.BookIndexVm;

@{
    ViewData["Title"] = "Index";
}
<h1>Böcker</h1>

<table class="table">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Titel</th>
            <th>Författare</th>
            <th>Beskrivning</th>
            <th>Exemplar</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var book in Model.Books)
            {
                string shortDescription = new string(book.Description.Take(50).ToArray()) + "...";
                int copies = 0;
                if(book.Copies != null)
                {
                    copies = book.Copies.Count();
                }
                if (copies > 0)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => book.ISBN)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => book.Title)
                        </td>
                        <td>
                            <a asp-controller="Authors" asp-action="Books" asp-route-id="@book.AuthorId">@Html.DisplayFor(modelItem => book.Author.Name)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => shortDescription)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => copies)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@book.Id">Detaljer</a> |
                            <a asp-controller="Loans" asp-action="Make" asp-route-id="@book.Id">Låna</a>
                        </td>
                    </tr>
                }
            }

        }
    </tbody>
</table>

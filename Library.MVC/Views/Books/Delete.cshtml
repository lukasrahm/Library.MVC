@model Library.Domain.Book

@{
    ViewData["Title"] = "Ta bort";
}

<h1>Ta bort</h1>

<h3>Är du säker på att du vill ta bort den här boken?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ISBN): 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
        <dt class = "col-sm-2">
            Titel: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            Författare: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Author.Name)
        </dd class>
        <dt class = "col-sm-2">
            Beskrivning: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="Admin">Tillbaka</a>
        <input type="submit" value="Ta bort" class="btn btn-danger" />
    </form>
</div>

@model Library.MVC.Models.BookCreateVm;

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AmountOfCopies" class="control-label"></label>
                <input asp-for="AmountOfCopies" class="form-control" />
                <span asp-validation-for="AmountOfCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailsList" class="control-label"></label>
                @Html.DropDownListFor(m => m.DetailId, Model.DetailsList, "Välj bok")
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

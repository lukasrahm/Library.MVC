@model Library.MVC.Models.BookCreateVm;

@{
    ViewData["Title"] = "Lägg till";
}

<h4>Lägg till ny bok</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ISBN" class="control-label"></label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="jonas-fula-text"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Authors" class="control-label"></label>
                @Html.DropDownListFor(m => m.AuthorId, Model.Authors, "Välj författare")
                <div>
                    <a asp-controller="Authors" asp-action="Create">Lägg till ny författare</a>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AmountOfCopies" class="control-label"></label>
                <input asp-for="AmountOfCopies" class="form-control" />
                <span asp-validation-for="AmountOfCopies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-danger" asp-action="Admin">Tillbaka</a>
                <input type="submit" value="Lägg till" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

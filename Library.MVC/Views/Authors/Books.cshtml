@model Library.Domain.Author;

@{
    ViewData["Title"] = "Books";
}
<h1>@Model.Name</h1>

<table class="table">
    <thead>
        <tr>
            <th>ISBN</th>
            <th>Titel</th>
            <th>Beskrivning</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var book in Model.Books)
            {
            string shortDescription = new string(book.Description.Take(50).ToArray()) + "...";

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => book.ISBN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => book.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => shortDescription)
                </td>
            </tr>

            }





        }
    </tbody>

</table>
<div>
    <a class="btn btn-danger" asp-action="Index">Gå tillbaka</a>
</div>
